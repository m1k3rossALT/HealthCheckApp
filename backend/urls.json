{
"AdminPanel": {
  "urls": [
    "https://internal.example.com/admin",
    "https://internal.example.com/dashboard",
    "https://internal.example.com/settings"
  ],
  "login": {
    "method": "POST",
    "env_username_key": "LOGIN_CREDENTIALS_ADMINPANEL_USERNAME",
    "env_password_key": "LOGIN_CREDENTIALS_ADMINPANEL_PASSWORD",
    "successCriteria": {
      "status": [200, 204],
      "responseIncludes": "Dashboard"
    }
  }
},
  "FinanceTool": {
    "urls": [
      "https://internal.example.com/finance",
      "https://internal.example.com/reports"
    ],
    "login": {
      "method": "POST",
      "env_username_key": "LOGIN_CREDENTIALS_FINANCETOOL_USERNAME",
      "env_password_key": "LOGIN_CREDENTIALS_FINANCETOOL_PASSWORD",
      "successCriteria": {
        "status": [200, 204],
        "responseIncludes": "Welcome to Finance"
      }
    }
  },
  "DevOpsPortal": {
    "urls": [
      "https://google.com",
      "https://devops.internal.example.com/deployments"
    ],
    "login": {
      "method": "POST",
      "env_username_key": "LOGIN_CREDENTIALS_DEVOPSPORTAL_USERNAME",
      "env_password_key": "LOGIN_CREDENTIALS_DEVOPSPORTAL_PASSWORD",
      "successCriteria": {
        "status": [200, 204],
        "responseIncludes": "Deploy Dashboard"
      }
    }
  },
  "HRSystem": {
    "urls": [
      "https://hr.example.com/employee",
      "https://hr.example.com/leaves"
    ],
    "login": {
      "method": "POST",
      "env_username_key": "LOGIN_CREDENTIALS_HRSYSTEM_USERNAME",
      "env_password_key": "LOGIN_CREDENTIALS_HRSYSTEM_PASSWORD",
      "successCriteria": {
        "status": [200, 204],
        "responseIncludes": "HR Portal"
      }
    }
  },
  "CustomerPortal": {
    "urls": [
      "https://portal.example.com/home",
      "https://portal.example.com/support"
    ],
    "login": {
      "method": "POST",
      "env_username_key": "LOGIN_CREDENTIALS_CUSTOMERPORTAL_USERNAME",
      "env_password_key": "LOGIN_CREDENTIALS_CUSTOMERPORTAL_PASSWORD",
      "successCriteria": {
        "status": [200, 204],
        "responseIncludes": "Customer Dashboard"
      }
    }
  },
  "DocumentationSite": {
    "urls": [
      "https://docs.internal.example.com",
      "https://docs.internal.example.com/api"
    ]
  }
}
